<footer class="relative px-4 py-16 bg-[#080808] overflow-hidden">
  <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/carbon-fibre.png')] opacity-10 pointer-events-none"></div>
  <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-[120%] h-1/2 bg-gradient-to-t from-primary/20 to-transparent blur-3xl pointer-events-none"></div>
  
  <div class="relative z-10 max-w-lg mx-auto text-center flex flex-col items-center gap-6">
    <h2 class="text-3xl font-black text-white dark:text-white leading-tight"><%= @title %></h2>
    <p class="text-gray-400"><%= @subtitle %></p>
    
    <a href="<%= @button_url %>" class="w-full md:w-auto min-w-[200px] h-14 bg-primary hover:bg-blue-600 text-white font-bold rounded-lg text-lg neon-glow transition-all shadow-xl shadow-primary/20 flex items-center justify-center">
      <%= @button_text %>
    </a>
    
    <div class="flex flex-wrap justify-center gap-6 mt-6 items-center">
      <div class="flex items-center gap-2 bg-white/5 px-3 py-1.5 rounded-full border border-white/10">
        <div class="flex text-yellow-500">
          <span class="material-symbols-outlined text-[18px]">star</span>
          <span class="material-symbols-outlined text-[18px]">star</span>
          <span class="material-symbols-outlined text-[18px]">star</span>
          <span class="material-symbols-outlined text-[18px]">star</span>
          <span class="material-symbols-outlined text-[18px]">star</span>
        </div>
        <span class="text-xs font-bold text-white dark:text-white"><%= @rating_text %></span>
      </div>
      
      <div class="flex items-center gap-2 grayscale hover:grayscale-0 transition-all opacity-70">
        <span class="material-symbols-outlined text-gray-400">verified</span>
        <span class="text-xs font-bold text-gray-300"><%= @badge_text %></span>
      </div>
    </div>
    
    <div class="mt-12 pt-8 w-full border-t border-white/10 flex flex-col md:flex-row justify-between items-center gap-4 text-xs text-gray-600">
      <p><%= @copyright %></p>
      <div class="flex gap-4">
        <a class="hover:text-white transition-colors" href="#">Privacy</a>
        <a class="hover:text-white transition-colors" href="#">Terms</a>
      </div>
    </div>
  </div>
</footer>
