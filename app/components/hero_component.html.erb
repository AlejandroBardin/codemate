<header class="relative w-full px-4 pt-12 pb-16 overflow-hidden bg-background-dark">
  <!-- Background Image (if uploaded) -->
  <% if @bg_image.present? %>
    <div class="absolute inset-0 z-0">
      <%= image_tag @bg_image, class: "w-full h-full object-cover" %>
      <!-- Dark gradient overlay for text readability -->
      <div class="absolute inset-0 bg-gradient-to-b from-background-dark/80 via-background-dark/90 to-background-dark"></div>
    </div>
  <% end %>
  
  <!-- Abstract 3D Background Element -->
  <div class="absolute top-0 right-0 w-3/4 h-full opacity-20 pointer-events-none z-[1]" style="background: radial-gradient(circle at 70% 30%, #0d7ff2 0%, transparent 60%); filter: blur(60px);"></div>
  
  <div class="relative z-10 max-w-lg mx-auto flex flex-col gap-6">
    <% if @badge_enabled %>
      <div class="inline-flex w-fit items-center gap-2 rounded-full border border-glass-border bg-glass-bg px-3 py-1 backdrop-blur-sm">
        <span class="flex h-2 w-2 rounded-full bg-green-500 shadow-[0_0_8px_rgba(34,197,94,0.6)]"></span>
        <span class="text-xs font-medium text-gray-300"><%= @badge_text %></span>
      </div>
    <% end %>
    
    <h1 class="text-4xl font-black leading-[1.1] tracking-tight text-white dark:text-white sm:text-5xl drop-shadow-lg">
      <%= highlighted_title.html_safe %>
    </h1>
    
    <p class="text-base leading-relaxed text-gray-400 max-w-[90%] drop-shadow-md">
      <%= @subtitle %>
    </p>
    
    <div class="flex flex-col sm:flex-row gap-3 pt-2">
      <a href="<%= @cta_primary_url %>" class="w-full sm:w-auto h-12 bg-primary hover:bg-blue-600 text-white font-bold rounded-lg px-6 transition-all neon-glow flex items-center justify-center gap-2">
        <%= @cta_primary_text %>
      </a>
      <a href="<%= @cta_secondary_url %>" class="w-full sm:w-auto h-12 bg-white/5 hover:bg-white/10 border border-white/10 text-white font-medium rounded-lg px-6 transition-all flex items-center justify-center">
        <%= @cta_secondary_text %>
      </a>
    </div>
    
    <!-- Trusted By Client Logos -->
    <% if @client_logos.any? %>
      <div class="mt-8 border-t border-white/10 pt-6">
        <p class="text-xs font-semibold uppercase tracking-wider text-gray-500 mb-4"><%= @trusted_by_text %></p>
        <div class="flex flex-wrap gap-6 items-center opacity-60 grayscale hover:grayscale-0 transition-all duration-500">
          <% @client_logos.each do |logo| %>
            <% if logo.logo_image.attached? %>
              <%= image_tag logo.logo_image, alt: logo.name, class: "h-6 w-20 object-contain" %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</header>
