<header class="relative w-full px-4 pt-12 pb-16 overflow-hidden bg-background-dark">
  <!-- Background Image (if uploaded) -->
  <% if @bg_image.present? %>
    <div class="absolute inset-0 z-0">
      <%= image_tag @bg_image, class: "w-full h-full object-cover" %>
      <!-- Dark gradient overlay for text readability -->
      <div class="absolute inset-0 bg-gradient-to-b from-background-dark/80 via-background-dark/90 to-background-dark"></div>
    </div>
  <% end %>
  
  <!-- Abstract 3D Background Element -->
  <div class="absolute top-0 right-0 w-3/4 h-full opacity-20 pointer-events-none z-[1]" style="background: radial-gradient(circle at 70% 30%, #0d7ff2 0%, transparent 60%); filter: blur(60px);"></div>
  
  <div class="relative z-10 max-w-lg mx-auto flex flex-col gap-6 items-center text-center">
    <% if @badge_enabled %>
      <div class="inline-flex w-fit items-center gap-2 rounded-full border border-glass-border bg-glass-bg px-3 py-1 backdrop-blur-sm">
        <span class="flex h-2 w-2 rounded-full bg-green-500 shadow-[0_0_8px_rgba(34,197,94,0.6)]"></span>
        <span class="text-xs font-medium text-gray-300"><%= @badge_text %></span>
      </div>
    <% end %>
    
    <h1 class="text-4xl font-black leading-[1.1] tracking-tight text-white dark:text-white sm:text-5xl drop-shadow-lg">
      <%= highlighted_title.html_safe %>
    </h1>
    
    <p class="text-base leading-relaxed text-gray-400 max-w-[90%] drop-shadow-md">
      <%= @subtitle %>
    </p>
    
    <!-- WhatsApp CTA Button -->
    <a href="https://wa.me/<%= Setting.get('whatsapp_number', '5493813416824') %>" target="_blank" class="inline-flex items-center justify-center gap-2 h-12 bg-primary hover:bg-blue-600 text-white font-bold rounded-lg px-6 transition-all neon-glow shadow-lg">
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
      </svg>
      <%= Setting.get('hero_cta_text', 'Hablemos por WhatsApp') %>
    </a>
    
    <!-- Trusted By Client Logos -->
    <% if @client_logos.any? %>
      <div class="mt-8 border-t border-white/10 pt-6 w-full">
        <p class="text-xs font-semibold uppercase tracking-wider text-gray-500 mb-4"><%= @trusted_by_text %></p>
        <div class="flex flex-wrap gap-6 items-center justify-center opacity-60 grayscale hover:grayscale-0 transition-all duration-500">
          <% @client_logos.each do |logo| %>
            <% if logo.logo_image.attached? %>
              <%= image_tag logo.logo_image, alt: logo.name, class: "h-6 w-20 object-contain" %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</header>
