<article class="bg-card-light dark:bg-card-dark rounded-2xl overflow-hidden shadow-md border border-gray-100 dark:border-gray-700 group">
  <div class="relative h-48 overflow-hidden">
    <%= image_tag main_image_url, class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-110", alt: @package.title, loading: "lazy", decoding: "async" %>
    <div class="absolute top-3 right-3 bg-secondary text-white text-xs font-bold px-3 py-1 rounded-full shadow-sm">
      <%= render_stars %>
    </div>
  </div>
  <div class="p-5">
    <div class="flex justify-between items-start mb-2">
      <h4 class="text-xl font-bold text-primary dark:text-white"><%= @package.title %></h4>
      <span class="material-symbols-outlined text-primary/50 text-xl">north_east</span>
    </div>
    <p class="text-xs text-gray-500 dark:text-gray-400 font-semibold uppercase tracking-wide mb-4"><%= @package.regime %></p>
    <ul class="space-y-2 mb-6 text-sm text-gray-700 dark:text-gray-300">
      <li class="flex items-center gap-2">
        <span class="material-symbols-outlined text-secondary text-lg">check_circle</span>
        <%= @package.duration %>
      </li>
      <li class="flex items-center gap-2">
        <span class="material-symbols-outlined text-secondary text-lg">check_circle</span>
        <%= @package.dates %>
      </li>
    </ul>
    <div class="flex items-end justify-between border-t border-gray-100 dark:border-gray-700 pt-4">
      <div class="flex flex-col">
        <span class="text-xs text-gray-500 dark:text-gray-400">Precio por persona</span>
        <span class="text-3xl font-black text-primary dark:text-white"><%= number_to_currency(@package.price, precision: 0) %></span>
      </div>
      <button class="bg-primary/10 hover:bg-primary/20 dark:bg-white/10 text-primary dark:text-white p-2 rounded-full transition-colors">
        <span class="material-symbols-outlined">add</span>
      </button>
    </div>
  </div>
</article>
