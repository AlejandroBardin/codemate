<section class="px-4 py-12 relative">
  <div class="absolute left-0 top-1/4 w-64 h-64 bg-primary/5 rounded-full blur-[80px] pointer-events-none"></div>
  <div class="max-w-lg mx-auto md:max-w-7xl relative z-10">
    <div class="flex flex-col gap-2 mb-8">
      <h2 class="text-2xl font-bold text-white dark:text-white">Our Expertise</h2>
      <p class="text-gray-400 text-sm">Specialized services for every stage of growth.</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <% @cards.each do |card| %>
        <div class="glass-card rounded-xl p-6 group hover:border-primary/50 transition-colors duration-300">
          <div class="h-10 w-10 rounded-lg bg-primary/20 flex items-center justify-center text-primary mb-4 group-hover:scale-110 transition-transform">
            <% if card.icon_type == :svg %>
              <%= card.render_icon %>
            <% elsif card.icon_type == :custom && card.custom_icon.attached? %>
              <%= image_tag card.custom_icon, class: "w-10 h-10 object-contain", alt: card.title %>
            <% end %>
          </div>
          <h3 class="text-lg font-bold text-white dark:text-white mb-2"><%= card.title %></h3>
          <p class="text-gray-400 text-sm leading-relaxed mb-4"><%= card.description %></p>
          <% if card.link_url.present? %>
            <a class="text-primary text-sm font-bold flex items-center gap-1 group-hover:gap-2 transition-all" href="<%= card.link_url %>">
              <%= card.link_text || 'Learn more' %> <span class="material-symbols-outlined text-sm">arrow_forward</span>
            </a>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>
