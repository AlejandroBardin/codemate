<div class="flex flex-col h-full bg-[#0F172A] text-slate-300">

  <!-- Back Button & Header -->
  <div class="flex items-center justify-between p-4 border-b border-slate-800 sticky top-0 bg-[#0F172A]/95 backdrop-blur z-10">
    <button class="text-slate-400 hover:text-white transition-colors" data-action="click->drawer#close">
      <i class="bi bi-arrow-left text-lg mr-2"></i> <span class="text-sm font-medium">Volver</span>
    </button>
    <div class="text-sm font-semibold text-white">Detalle del Lead</div>
    <button class="text-slate-400 hover:text-white"><i class="bi bi-gear"></i></button>
  </div>

  <div class="flex-1 overflow-y-auto custom-scrollbar p-6 space-y-8">

    <!-- Profile Section -->
    <div class="flex flex-col items-center">
      <div class="relative mb-4">
        <div class="w-20 h-20 rounded-full bg-slate-700 flex items-center justify-center text-white font-bold text-2xl ring-4 ring-slate-800 shadow-xl overflow-hidden">
          <% if false # lead.avatar.attached? %>
             <% # image_tag... %>
          <% else %>
             <%= lead.initials %>
          <% end %>
        </div>
        <div class="absolute bottom-0 right-0 w-6 h-6 rounded-full bg-green-500 border-4 border-[#0F172A]"></div>
      </div>

      <h2 class="text-xl font-bold text-white"><%= lead.full_name %></h2>
      <p class="text-sm text-slate-500 mt-1">Lead Potencial • Hace <%= time_ago_in_words(lead.created_at) %></p>

      <div class="mt-6 w-full">
        <% if lead.chatwoot_conversation_id.present? %>
          <a href="<%= ENV.fetch('CHATWOOT_INSTALLATION_URL', 'https://app.chatwoot.com') %>/app/accounts/<%= ENV.fetch('CHATWOOT_ACCOUNT_ID', '1') %>/conversations/<%= lead.chatwoot_conversation_id %>"
             target="_blank"
             class="flex items-center justify-center w-full py-3 bg-blue-600 hover:bg-blue-500 text-white font-semibold rounded-lg shadow-lg shadow-blue-500/20 transition-all active:scale-[0.98]">
            <i class="bi bi-chat-left-text mr-2"></i> Abrir Chatwoot
          </a>
        <% else %>
          <span class="flex items-center justify-center w-full py-3 bg-slate-700 text-slate-500 font-semibold rounded-lg cursor-not-allowed">
            <i class="bi bi-chat-left-text mr-2"></i> Sin Conversación
          </span>
        <% end %>
      </div>
    </div>

    <!-- Ad Intelligence Card -->
    <div class="bg-gradient-to-br from-indigo-900/40 to-slate-900 border border-indigo-500/30 rounded-xl p-4 relative overflow-hidden group">
      <!-- Glow Effect -->
      <div class="absolute top-0 right-0 w-32 h-32 bg-indigo-500/20 rounded-full blur-3xl -mr-16 -mt-16 pointer-events-none"></div>

      <div class="flex gap-4 relative z-10">
        <!-- Ad Image Thumbnail -->
        <div class="w-16 h-20 bg-slate-800 rounded-lg flex-shrink-0 overflow-hidden border border-slate-700 shadow-md">
          <% if lead.ad_creative_snapshot.attached? %>
            <%= image_tag lead.ad_creative_snapshot, class: "w-full h-full object-cover" %>
          <% else %>
            <div class="w-full h-full flex items-center justify-center text-slate-600">
              <i class="bi bi-image"></i>
            </div>
          <% end %>
        </div>

        <div class="flex-1 min-w-0">
          <div class="flex justify-between items-start">
            <div>
              <h3 class="text-white font-bold text-sm truncate"><%= lead.ad_headline.presence || "Anuncio Sin Título" %></h3>
              <div class="flex items-center gap-1.5 mt-1">
                <i class="bi <%= lead.platform_icon %> text-xs text-indigo-400"></i>
                <span class="text-xs text-slate-400">Instagram Stories</span>
              </div>
              <div class="text-xs text-slate-500 mt-0.5"><i class="bi bi-phone"></i> iPhone 13</div>
            </div>

            <span class="bg-green-500/10 text-green-400 border border-green-500/20 text-[10px] font-bold px-1.5 py-0.5 rounded">
              $0.45 USD
            </span>
          </div>
        </div>
      </div>
    </div>

    <!-- Activity Timeline -->
    <div>
      <h3 class="text-xs font-semibold text-slate-500 uppercase tracking-wider mb-4">Actividad Reciente</h3>

      <div class="relative pl-4 border-l border-slate-800 space-y-6">
        <!-- Event 1 -->
        <div class="relative">
          <div class="absolute -left-[21px] top-1 w-3 h-3 rounded-full bg-[#0F172A] border-2 border-indigo-500 flex items-center justify-center shadow-[0_0_10px_rgba(99,102,241,0.5)]">
            <div class="w-1 h-1 bg-indigo-500 rounded-full"></div>
          </div>
          <div class="bg-slate-800/50 p-3 rounded-lg border border-slate-700/50">
            <p class="text-sm text-white font-medium">Vio anuncio en Instagram</p>
            <p class="text-xs text-slate-500 mt-1">14:20 • ID: <%= lead.meta_ad_id %></p>
          </div>
        </div>

         <!-- Event 2 -->
        <div class="relative">
          <div class="absolute -left-[21px] top-1 w-3 h-3 rounded-full bg-[#0F172A] border-2 border-cyan-500"></div>
          <div class="bg-slate-800/50 p-3 rounded-lg border border-slate-700/50">
            <p class="text-sm text-white font-medium">Visitó Landing Cataratas</p>
            <p class="text-xs text-slate-500 mt-1">14:22 • Chrome Mobile</p>
          </div>
        </div>

        <!-- Event 3 (Conversion) -->
         <div class="relative">
          <div class="absolute -left-[21px] top-1 w-3 h-3 rounded-full bg-[#0F172A] border-2 border-pink-500"></div>
          <div class="bg-slate-800/50 p-3 rounded-lg border border-slate-700/50">
            <div class="flex items-center gap-2">
               <p class="text-sm text-white font-medium">Clic en WhatsApp</p>
               <span class="bg-pink-500/10 text-pink-400 text-[10px] px-1.5 rounded border border-pink-500/20">CAPI Match</span>
            </div>
            <p class="text-xs text-slate-500 mt-1">14:25 • Conversión iniciada</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer Actions -->
  <div class="p-4 bg-[#0F172A] border-t border-slate-800 grid grid-cols-2 gap-3">
    <button class="flex flex-col items-center justify-center p-3 rounded-xl bg-slate-800 hover:bg-slate-700 border border-slate-700 text-slate-300 transition-colors">
      <i class="bi bi-envelope text-lg mb-1"></i>
      <span class="text-xs">Enviar PDF</span>
    </button>
    <button class="flex flex-col items-center justify-center p-3 rounded-xl bg-slate-800 hover:bg-slate-700 border border-slate-700 text-yellow-500 transition-colors">
      <i class="bi bi-file-earmark-text text-lg mb-1"></i>
      <span class="text-xs">Re-cotizar</span>
    </button>
  </div>
</div>
