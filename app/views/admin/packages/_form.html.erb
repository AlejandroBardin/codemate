<%= form_with(model: [:admin, package], class: "space-y-6") do |form| %>
  <% if package.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-md">
      <div class="flex">
        <div class="flex-shrink-0">
          <span class="material-symbols-outlined text-red-400">error</span>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(package.errors.count, "error") %> impidieron guardar:
          </h3>
          <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
            <% package.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <%# Información Básica %>
  <div class="bg-white dark:bg-gray-800 shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-white mb-4">
        Información Básica
      </h3>

      <div class="grid grid-cols-1 gap-6">
        <div>
          <%= form.label :title, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= form.text_field :title,
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-3 py-2",
            placeholder: "Ej: Mendoza 2024 - Todo Incluido" %>
        </div>

        <div>
          <%= form.label :description, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= form.text_area :description,
            rows: 4,
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-3 py-2",
            placeholder: "Describe el paquete turístico..." %>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= form.label :price, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
            <div class="mt-1 relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <span class="text-gray-500 sm:text-sm">$</span>
              </div>
              <%= form.number_field :price,
                class: "block w-full pl-7 rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-3 py-2",
                step: 0.01,
                placeholder: "350000" %>
            </div>
          </div>

          <div>
            <%= form.label :stars, "Categoría", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
            <%= form.select :stars,
              [
                ["⭐ - 1 Estrella", "⭐"],
                ["⭐⭐ - 2 Estrellas", "⭐⭐"],
                ["⭐⭐⭐ - 3 Estrellas", "⭐⭐⭐"],
                ["⭐⭐⭐⭐ - 4 Estrellas", "⭐⭐⭐⭐"],
                ["⭐⭐⭐⭐⭐ - 5 Estrellas", "⭐⭐⭐⭐⭐"]
              ],
              { include_blank: "Seleccionar categoría..." },
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-3 py-2" %>
          </div>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= form.label :duration, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
            <%= form.text_field :duration,
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-3 py-2",
              placeholder: "4 Noches / 5 Días" %>
          </div>

          <div>
            <%= form.label :regime, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
            <%= form.text_field :regime,
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-3 py-2",
              placeholder: "Media Pensión" %>
          </div>
        </div>

        <div class="flex items-center">
          <%= form.check_box :featured, class: "rounded border-gray-300 text-indigo-600 focus:ring-indigo-500 h-4 w-4" %>
          <%= form.label :featured, "Destacar en página principal", class: "ml-2 text-sm text-gray-700 dark:text-gray-300" %>
        </div>
      </div>
    </div>
  </div>

  <%# Imágenes %>
  <div class="bg-white dark:bg-gray-800 shadow sm:rounded-lg">
    <details class="group">
      <summary class="cursor-pointer px-4 py-5 sm:p-6 flex justify-between items-center">
        <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-white">
          Imágenes
        </h3>
        <svg class="w-5 h-5 text-gray-500 group-open:rotate-180 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
        </svg>
      </summary>

      <div class="px-4 pb-5 sm:px-6 space-y-4">
        <div>
          <%= form.label :main_image, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
          <%= form.file_field :main_image,
            accept: "image/*",
            class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
        </div>

        <div>
          <%= form.label :gallery_images, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
          <%= form.file_field :gallery_images,
            multiple: true,
            accept: "image/*",
            class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
        </div>
      </div>
    </details>
  </div>

  <%# Preguntas Frecuentes - Nested %>
  <div class="bg-white dark:bg-gray-800 shadow sm:rounded-lg" data-controller="nested-form">
    <details class="group" open>
      <summary class="cursor-pointer px-4 py-5 sm:p-6 flex justify-between items-center">
        <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-white">
          Preguntas Frecuentes
        </h3>
        <svg class="w-5 h-5 text-gray-500 group-open:rotate-180 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
        </svg>
      </summary>

      <div class="px-4 pb-5 sm:px-6">
        <div data-nested-form-target="container">
          <%= form.fields_for :questions do |question_form| %>
            <%= render 'question_fields', form: question_form %>
          <% end %>
        </div>

        <%# Template para nuevas preguntas %>
        <template data-nested-form-target="template">
          <%= form.fields_for :questions, Question.new, child_index: 'NEW_RECORD' do |question_form| %>
            <%= render 'question_fields', form: question_form %>
          <% end %>
        </template>

        <div class="mt-4">
          <button type="button"
            data-action="nested-form#add"
            class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            <svg class="mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Agregar Pregunta
          </button>
        </div>
      </div>
    </details>
  </div>

  <%# Botones de acción %>
  <div class="flex justify-end gap-3">
    <%= link_to "Cancelar", admin_packages_path,
      class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <%= form.submit "Guardar Paquete",
      class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>
