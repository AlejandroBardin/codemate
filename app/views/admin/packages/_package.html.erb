<div class="relative h-64 rounded-lg overflow-hidden shadow-lg group">
  <% if package.main_image.attached? %>
    <%= image_tag package.main_image, class: "absolute inset-0 w-full h-full object-cover" %>
  <% else %>
    <div class="absolute inset-0 w-full h-full bg-gradient-to-br from-indigo-500 to-purple-600"></div>
  <% end %>

  <!-- Overlay oscuro -->
  <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>

  <!-- Badge de estrellas -->
  <div class="absolute top-3 right-3 bg-orange-400 text-white px-3 py-1 rounded-full text-sm font-semibold shadow-lg">
    <%= package.stars %>
  </div>

  <!-- Contenido -->
  <div class="absolute inset-0 p-4 flex flex-col justify-between text-white relative z-10">
    <!-- Header -->
    <div>
      <h3 class="text-xl font-bold drop-shadow-lg"><%= package.title %></h3>
      <% if package.regime.present? %>
        <span class="inline-block mt-2 px-2 py-1 bg-white/20 backdrop-blur-sm rounded text-xs uppercase">
          <%= package.regime %>
        </span>
      <% end %>
    </div>

    <!-- Footer -->
    <div>
      <div class="space-y-2 mb-3">
        <div class="flex items-center gap-2 text-sm">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6z"/>
          </svg>
          <%= package.duration %>
        </div>
        <% if package.dates.present? %>
          <div class="flex items-center gap-2 text-sm">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
            </svg>
            Salida: <%= package.dates %>
          </div>
        <% end %>
      </div>

      <div class="flex items-end justify-between">
        <div>
          <p class="text-xs opacity-80">Precio por persona</p>
          <p class="text-2xl font-bold"><%= number_to_currency(package.price, precision: 0) %></p>
        </div>

        <!-- Toggle destacado -->
        <%= form_with(model: [:admin, package], method: :patch, class: "inline-block") do |f| %>
          <%= f.hidden_field :featured, value: !package.featured %>
          <%= f.button type: "submit", class: "#{package.featured ? 'bg-green-500' : 'bg-white/20 backdrop-blur-sm'} px-3 py-1.5 rounded-lg hover:scale-105 transition-transform font-medium text-sm" do %>
            <%= package.featured ? "✓ Destacado" : "☆ Destacar" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Hover overlay para botones -->
  <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center gap-3 z-20 pointer-events-none">
    <%= link_to "Ver", admin_package_path(package), class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium shadow-lg pointer-events-auto" %>
    <%= link_to "Editar", edit_admin_package_path(package), class: "px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white rounded-lg font-medium shadow-lg pointer-events-auto" %>
    <%= button_to "Eliminar", admin_package_path(package), method: :delete, class: "px-4 py-2 text-white bg-red-600 hover:bg-red-700 rounded-lg font-medium shadow-lg pointer-events-auto", data: { turbo_confirm: "¿Estás seguro?" } %>
  </div>
</div>
