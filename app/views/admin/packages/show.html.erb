<div class="w-full">
  <% if notice.present? %>
    <div class="mb-6 rounded-md bg-green-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-green-800"><%= notice %></p>
        </div>
      </div>
    </div>
  <% end %>

  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Detalle del Paquete</h1>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">
        <%= @package.title %>
      </h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">
        Información completa del paquete turístico
      </p>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Precio</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= number_to_currency(@package.price, precision: 0) %>
          </dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Categoría</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @package.stars %>
          </dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Duración</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @package.duration %>
          </dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Fechas</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @package.dates %>
          </dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Régimen</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @package.regime %>
          </dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Destacado</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @package.featured? ? "Sí" : "No" %>
          </dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Descripción</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @package.description %>
          </dd>
        </div>

        <% if @package.questions.any? %>
          <div class="bg-white px-4 py-5 sm:px-6 border-t border-gray-200">
            <dt class="text-sm font-medium text-gray-500 mb-3">Preguntas Frecuentes</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <ul class="space-y-3">
                <% @package.questions.enabled.each do |question| %>
                  <li class="bg-gray-50 p-3 rounded">
                    <p class="font-medium"><%= question.name %></p>
                    <% if question.answer.present? %>
                      <p class="text-gray-600 mt-1"><%= question.answer %></p>
                    <% end %>
                    <span class="text-xs text-gray-500 mt-1 inline-block">
                      <%= t("enums.question.kind.#{question.kind}") %>
                    </span>
                  </li>
                <% end %>
              </ul>
            </dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>

  <div class="mt-6 flex gap-3">
    <%= link_to "Editar", edit_admin_package_path(@package),
      class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
    <%= button_to "Eliminar", admin_package_path(@package), method: :delete,
      class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700",
      data: { turbo_confirm: "¿Estás seguro de eliminar este paquete?" } %>
    <%= link_to "Volver", admin_packages_path,
      class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
  </div>
</div>
