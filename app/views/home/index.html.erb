<% content_for :head do %>
  <%= meta_tags_for %>
  <%= organization_structured_data %>
<% end %>

<%= render HeaderComponent.new %>

<main class="max-w-md mx-auto pb-24">
  <%= render HeroComponent.new(
    title: @hero_title,
    subtitle: @hero_subtitle,
    image_url: @hero_image
  ) %>

  <%= render FeaturesBadgeComponent.new %>

  <section class="px-4 py-8 space-y-6">
    <h3 class="text-2xl font-bold text-primary dark:text-white text-center mb-6">Nuestros Paquetes</h3>
    <div class="grid grid-cols-1 gap-6">
      <% @packages.each do |package| %>
        <%= render PackageCardComponent.new(package: package) %>
      <% end %>
    </div>
  </section>

  <%= render BenefitsComponent.new %>
</main>

<%= render BottomCtaComponent.new %>
